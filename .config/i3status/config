# i3status configuration file. See man page
# It is important that this file is edited as UTF-8.
# ß
# If the above line is not correctly displayed, fix your editor first!

general {
    output_format = "i3bar"
	colors = true
	interval = 1
}

#order += "ipv6"
order += "ethernet _first_"
order += "wireless _first_"
order += "battery all"
order += "volume master"
order += "disk /"
order += "disk /mnt/750"
order += "memory"
order += "cpu_usage"
order += "cpu_temperature 0"
#order += "read_file cpu_mode"
order += "load"
order += "tztime local"

ethernet _first_ {
	format_up = "E: %ip (%speed)"
	#format_down = "E: down"
	format_down = ""
}

wireless _first_ {
	format_up = "💻 %bitrate %quality %essid %ip"
	format_down = "💻 down"
    format_quality = "%d%s"
}

battery all {
	format = "%status %percentage %remaining"
    status_chr = "⚡"
    status_bat = "🔋"
    status_unk = "❓"
    status_full = "✅"
    low_threshold = 15
    threshold_type = percentage
}

volume master {
	format = "🎧 %volume"
    format_muted = "🎧 %volume"
    #format_muted = "♪ %volume"
	device = "default"
	mixer = "Master"
	mixer_idx = 0
}

disk "/" {
	format = "SSD %avail"
}

disk "/mnt/750" {
	format = "HDD %avail"
}
memory {
	format = "RAM %used / %available"
	threshold_degraded = "1G"
	format_degraded = "MEMORY < %available"
}

cpu_usage {
    format = "CPU %usage"
    separator = false
    separator_block_width = 0
}

cpu_temperature 0 {
    format = " %degrees°C "
    path = "/sys/class/thermal/thermal_zone0/temp"
    separator = false
    separator_block_width = 0
}

read_file cpu_mode {
    path = "/sys/devices/platform/faustus/throttle_thermal_policy"
}

load {
	format = "%1min"
}

tztime local {
	format = "%Y-%m-%d %H:%M:%S"
}
